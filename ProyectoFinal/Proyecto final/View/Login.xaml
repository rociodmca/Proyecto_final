<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_final.View.Login"
             Title="Login">
    <Grid ColumnDefinitions="*" RowDefinitions="*" ColumnSpacing="10" RowSpacing="10" Margin="40" x:Name="phone">
        <Frame BorderColor="Aquamarine" Grid.Column="0" Grid.Row="0">
            <Grid RowDefinitions="*,*,*,*,*,*" ColumnDefinitions="*" Margin="10">
                <Image Source="inicio.png" Grid.Column="0" Grid.Row="0"/>
                <!--<Label Text="Email: " Grid.Column="0" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center"/>-->
                <Entry x:Name="email" Grid.Column="0" Grid.Row="2" VerticalOptions="Center" Placeholder="Email" HorizontalTextAlignment="Center"/>
                <!--<Label Text="Contraseña: " Grid.Column="0" Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center"/>-->
                <Entry x:Name="password" Grid.Column="0" Grid.Row="3" VerticalOptions="Center" Placeholder="Contraseña" IsPassword="True" HorizontalTextAlignment="Center"/>
                <Button x:Name="BtnLog" Text="Sign In" Clicked="BtnLog_Clicked"  Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2"/>
            </Grid>
        </Frame>
    </Grid>
</ContentPage>