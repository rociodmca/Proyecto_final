<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_final.View.Manual"
             Title="Manual">

    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,0">
            <GradientStop Color="{DynamicResource end_claro}" Offset="0.1"/>
            <GradientStop Color="{DynamicResource start_claro}" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid ColumnDefinitions="*" RowDefinitions="*" Margin="30" HorizontalOptions="Center" VerticalOptions="Center">
        <Label x:Name="prueba" Grid.Row="0" Grid.Column="0" FontSize="26" TextColor="{DynamicResource letra}" Text="{DynamicResource manual}" FontFamily="espressonal"/>
    </Grid>
    
</ContentPage>