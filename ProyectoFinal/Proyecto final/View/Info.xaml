<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_final.View.Info"
             Title="Info">
    <ContentPage.Background>
        <RadialGradientBrush Center="0.5,0.5">
            <GradientStop Color="{DynamicResource start}" Offset="0.1"/>
            <GradientStop Color="{DynamicResource end}" Offset="1.0" />
        </RadialGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Spacing="20">
        <Grid Grid.Column="2" Grid.Row="0" ColumnDefinitions="Auto,Auto,Auto" RowDefinitions="Auto" ColumnSpacing="10" HorizontalOptions="End">
            <Image Source="espanol.png" Grid.Column="0" Grid.Row="0" WidthRequest="20"/>
            <Switch Grid.Column="1" Grid.Row="0" x:Name="idiomas" IsToggled="False" Toggled="idiomas_Toggled" ThumbColor="White"/>
            <Image Source="ingles.png" Grid.Column="2" Grid.Row="0" WidthRequest="20"/>
        </Grid>
        <Grid RowDefinitions="*,4*,*" ColumnDefinitions="*,6*,*">
            <ScrollView Grid.Row="1" Grid.Column="1">
                <Label x:Name="info" TextColor="{DynamicResource letra}"/>
            </ScrollView>
        </Grid>
    </VerticalStackLayout>
    
</ContentPage>