    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*">
        <Grid Grid.Column="0" Grid.Row="0" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowDefinitions="Auto" ColumnSpacing="10" HorizontalOptions="End" Margin="20">
            <!--<Picker x:Name="tema" Grid.Column="0" Grid.Row="0" ItemsSource="{DynamicResource miArray}" SelectedIndex="0" BackgroundColor="{DynamicResource bgd}"/>-->
            <RadioButton  Grid.Column="0" Grid.Row="0" x:Name="op1" IsChecked="True" GroupName="Temas" VerticalOptions="Center" CheckedChanged="RadioButton_CheckedChanged" Value="0" ToolTipProperties.Text="Opción para elegir el tema original" SemanticProperties.Description="Opción para elegir el tema original">
                <RadioButton.Content>
                    <Image Source="bombilla_color.png" WidthRequest="40" VerticalOptions="Center" BackgroundColor="White"/>
                </RadioButton.Content>
            </RadioButton>
            <RadioButton  Grid.Column="1" Grid.Row="0" x:Name="op2" GroupName="Temas" VerticalOptions="Center" CheckedChanged="RadioButton_CheckedChanged" Value="1" ToolTipProperties.Text="Opción para elegir el tema oscuro" SemanticProperties.Description="Opción para elegir el tema oscuro">
                <RadioButton.Content>
                    <Image Source="bombilla_oscura.png" WidthRequest="40" VerticalOptions="Center" BackgroundColor="White"/>
                </RadioButton.Content>
            </RadioButton>
            <RadioButton  Grid.Column="2" Grid.Row="0" x:Name="op3" GroupName="Temas" VerticalOptions="Center" CheckedChanged="RadioButton_CheckedChanged" Value="2" ToolTipProperties.Text="Opción para elegir el tema de alto contraste" SemanticProperties.Description="Opción para elegir el tema de alto contraste">
                <RadioButton.Content>
                    <Image Source="bombilla_contraste.png" WidthRequest="40" HeightRequest="40" VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="Black"/>
                </RadioButton.Content>
            </RadioButton>
            <Label x:Name="size" Grid.Column="3" Grid.Row="0" TextColor="{DynamicResource letra}" Text="{DynamicResource tam_letra_info}" FontFamily="espressonal" VerticalOptions="Center"/>
            <Slider x:Name="tam_letra" Grid.Column="4" Grid.Row="0" Margin="10" WidthRequest="200" Minimum="12" Maximum="40" Value="16" ValueChanged="tam_letra_ValueChanged" ThumbColor="{DynamicResource letra}"/>
            <Image Source="espanol.png" Grid.Column="5" Grid.Row="0" WidthRequest="20"/>
            <Switch Grid.Column="6" Grid.Row="0" x:Name="idiomas" IsToggled="False" Toggled="idiomas_Toggled" ThumbColor="White"/>
            <Image Source="ingles.png" Grid.Column="7" Grid.Row="0" WidthRequest="20"/>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1" RowDefinitions="*,10*,*" ColumnDefinitions="*,6*,*">
            <ScrollView Grid.Row="1" Grid.Column="1" VerticalOptions="FillAndExpand">
                <VerticalStackLayout Spacing="40">
                    <Label x:Name="info1" TextColor="{DynamicResource letra}" Text="{DynamicResource info1}" FontFamily="espressonal"/>
                    <Label x:Name="info2" TextColor="{DynamicResource letra}" Text="{DynamicResource info2}" FontFamily="espressonal"/>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
    
