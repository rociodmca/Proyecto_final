<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_final.Vista.RegistroUsuario"
             Title="RegistroUsuario">
    <Grid ColumnDefinitions="*" RowDefinitions="*" Margin="20">
        <Frame BorderColor="Aquamarine">
            <Grid RowDefinitions="*,*,*,*,*,*,*" ColumnDefinitions="*,2*" RowSpacing="10" ColumnSpacing="10" Margin="40">
                <Label Text="Nombre: " Grid.Column="0" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Entry x:Name="nombre" Grid.Column="1" Grid.Row="0" VerticalOptions="Center"/>
                <Label Text="Apellidos: " Grid.Column="0" Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Entry x:Name="apellidos" Grid.Column="1" Grid.Row="1" VerticalOptions="Center"/>
                <Label Text="Email: " Grid.Column="0" Grid.Row="2" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Entry x:Name="email" Grid.Column="1" Grid.Row="2" VerticalOptions="Center"/>
                <Label Text="ContraseÃ±a: " Grid.Column="0" Grid.Row="3" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Entry x:Name="password" Grid.Column="1" Grid.Row="3" VerticalOptions="Center"/>
                <Label Text="Rol: " Grid.Column="0" Grid.Row="4" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Picker x:Name="rol" Grid.Column="1" Grid.Row="4" VerticalOptions="Center"/>
                <Grid Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" ColumnDefinitions="*,*" RowDefinitions="*" ColumnSpacing="10">
                    <Button x:Name="BtnRegistrarse" Text="Registrarse" Clicked="BtnRegistrarse_Clicked" Grid.Column="0" Grid.Row="0"/>
                    <Button x:Name="BtnCancelar" Text="Cancelar" Clicked="BtnCancelar_Clicked" Grid.Column="1" Grid.Row="0"/>
                </Grid>
            </Grid>
        </Frame>
    </Grid>
</ContentPage>