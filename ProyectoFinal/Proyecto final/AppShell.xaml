<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Proyecto_final.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Proyecto_final"
    xmlns:pages="clr-namespace:Proyecto_final.Vista"
    Shell.FlyoutBehavior="Disabled"
    Title="Proyecto_final">

    <!-- Phone -->
    <TabBar x:Name="PhoneTabs" Title="Prueba">
        <Tab Title="Home" Icon="inicio.png">
            <ShellContent Title="Home" ContentTemplate="{DataTemplate pages:Info}" />
        </Tab>
        <Tab Title="Registro" Icon="editar.png">
            <ShellContent Title="Prueba1" ContentTemplate="{DataTemplate pages:RegistroUsuario}"/>
        </Tab>
        <Tab Title="Manual" Icon="manual.png">
            <ShellContent Title="Prueba3" ContentTemplate="{DataTemplate pages:Manual}"/>
        </Tab>
    </TabBar>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <FlyoutItem Title="Registro" Icon="editar.png">
        <ShellContent Title="Prueba1" ContentTemplate="{DataTemplate pages:RegistroUsuario}"/>
    </FlyoutItem>

</Shell>
